{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "jsx": "react",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "target": "esnext",
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "removeComments": false,
    "baseUrl": "./",
    "types": ["./src/types"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}
